{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.15/MicrosoftTeams.schema.json",
  "version": "1.0.0",
  "manifestVersion": "1.15",
  "id": "${{TEAMS_APP_ID}}",
  "packageName": "com.microsoft.agents.handlingcards",
  "name": {
    "short": "HandlingCards",
    "full": "HandlingCards Agent"
  },
  "developer": {
    "name": "Microsoft",
    "mpnId": "",
    "websiteUrl": "https://microsoft.com",
    "privacyUrl": "https://privacy.microsoft.com/privacystatement",
    "termsOfUseUrl": "https://www.microsoft.com/legal/terms-of-use"
  },
  "description": {
    "short": "Demonstration of different card types in Agents SDK",
    "full": "Demonstration of different card types in Agents SDK"
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#FFFFFF",
  "staticTabs": [
    {
      "entityId": "conversations",
      "scopes": [ "personal" ]
    },
    {
      "entityId": "about",
      "scopes": [ "personal" ]
    }
  ],
  "bots": [
    {
      "botId": "${{BOT_ID}}",
      "scopes": [ "personal", "team", "groupChat" ],
      "isNotificationOnly": false,
      "supportsCalling": false,
      "supportsVideo": false,
      "supportsFiles": false
    }
  ],
  "validDomains": [
    "${{BOT_DOMAIN}}"
  ]
}
